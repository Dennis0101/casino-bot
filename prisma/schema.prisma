// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @db.VarChar(32) // Discord userId
  balance      Int      @default(1000)
  dailyClaimed DateTime?
  banned       Boolean  @default(false)
  clientSeed   String?  // 공정성용(선택)
  createdAt    DateTime @default(now())
  bets         Bet[]
  seats        Seat[]

  @@index([createdAt])
}

model Bet {
  id          String      @id @default(cuid())
  userId      String
  tableId     String?                           // 블랙잭/바카라 라운드 추적(슬롯은 null)
  game        GameType
  amount      Int
  outcome     Outcome
  odds        Float       @default(1.0)         // 배당 기록(검증용)
  delta       Int
  meta        Json?                              // 카드/슬롯 릴 등 상세
  commitHash  String?                            // commit → reveal
  serverSeed  String?
  clientSeed  String?
  nonce       Int?
  createdAt   DateTime    @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  table  Table? @relation(fields: [tableId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([tableId, createdAt])
  @@index([game, createdAt])
}

model Table {
  id          String       @id @default(cuid())
  type        GameType
  status      TableStatus  @default(OPEN)
  channelId   String
  messageId   String?
  minPlayers  Int          @default(2)
  maxPlayers  Int          @default(6)
  stateJson   Json?
  shoeJson    Json?
  seats       Seat[]
  bets        Bet[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([channelId])
  @@index([type, status])
}

model Seat {
  id        String   @id @default(cuid())
  tableId   String
  userId    String
  joinedAt  DateTime @default(now())

  table     Table    @relation(fields: [tableId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tableId, userId])
  @@index([userId, joinedAt])
}

enum GameType {
  BLACKJACK
  BACCARAT
  SLOTS
}

enum TableStatus {
  OPEN
  RUNNING
  SETTLING
  CLOSED
}

enum Outcome {
  WIN
  LOSE
  PUSH
  BANKER
  PLAYER
  TIE
}
