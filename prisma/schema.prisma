datasource db { provider = "postgresql"; url = env("DATABASE_URL") }
generator client { provider = "prisma-client-js" }

model User {
  id           String   @id @db.VarChar(32)            // Discord userId
  balance      Int      @default(1000)
  dailyClaimed DateTime?
  banned       Boolean  @default(false)
  clientSeed   String?                                  // 공정성용(선택)
  createdAt    DateTime @default(now())
  bets         Bet[]
  seats        Seat[]

  @@index([createdAt])
}

model Bet {
  id          String      @id @default(cuid())
  userId      String
  tableId     String?                                      // 블랙잭/바카라 라운드 추적(슬롯은 null)
  game        GameType
  amount      Int
  outcome     Outcome                                      // enum으로 고정
  odds        Float      @default(1.0)
  delta       Int
  meta        Json?
  commitHash  String?                                      // commit→reveal
  serverSeed  String?
  clientSeed  String?
  nonce       Int?
  createdAt   DateTime   @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  table  Table? @relation(fields: [tableId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])                             // 유저 랭킹/히스토리
  @@index([tableId, createdAt])                            // 테이블별 라운드 정산 조회
  @@index([game, createdAt])
}

model Table {
  id          String       @id @default(cuid())
  type        GameType
  status      TableStatus  @default(OPEN)
  channelId   String
  messageId   String?
  minPlayers  Int          @default(2)                     // 블랙잭 최소 2
  maxPlayers  Int          @default(6)                     // 블랙잭 최대 6
  stateJson   Json?                                        // 라운드/타이머/턴 인덱스 등
  shoeJson    Json?                                        // 블랙잭 슈(바카라는 사용 X)
  seats       Seat[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  bets        Bet[]                                        // 역관계

  @@index([channelId])
  @@index([type, status])
}

model Seat {
  id        String   @id @default(cuid())
  tableId   String
  userId    String
  joinedAt  DateTime @default(now())

  table     Table    @relation(fields: [tableId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tableId, userId])                              // 중복 착석 방지
  @@index([userId, joinedAt])
}

enum GameType   { BLACKJACK BACCARAT SLOTS }
enum TableStatus{ OPEN RUNNING SETTLING CLOSED }
enum Outcome    { WIN LOSE PUSH BANKER PLAYER TIE }        // 베팅 결과 표준화
